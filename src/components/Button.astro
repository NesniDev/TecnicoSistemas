---
interface Props {
  href: string
  className?: string
  openBlank?: boolean
}

const { href, className, openBlank } = Astro.props
---

<a
  href={href}
  target={openBlank ? '_blank' : '_self'}
  class={`bg-[#64FFDA] hover:scale-[0.99] rounded-lg hover:opacity-70 text-sm text-black font-semibold transition ${className ? className : 'px-3 py-2'}`}
  ><slot />
</a>
