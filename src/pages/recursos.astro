---
import SearchInput from '@assets/icons/SearchInput.astro'
import Container from '@components/Shared/Container.astro'
import { names } from '@lib/name.courses'
import Footer from '@components/Shared/Footer.astro'
import Header from '@components/Shared/Header.astro'
import ArticleResources from '@components/resources/ArticleResources.astro'
import PaginationResources from '@components/resources/PaginationResources.astro'
import Layout from '@layouts/Layout.astro'
import { actions } from 'astro:actions'

const searchParams = Astro.url.searchParams

const page = Number(searchParams.get('page') ?? 1)
const search = searchParams.get('search') ?? undefined
const category = searchParams.get('category') ?? undefined

const { data, error } = await Astro.callAction(actions.getResourceByPage, {
  page,
  search,
  category
})

if (error) {
  return Astro.redirect('/')
}

const { resourcesByPage, totalPages } = data
---

<Layout title="Recursos Educativos y Tecnológicos | Aprende con InfoByte">
  <Header />
  <div class="animate-fade-in-up max-w-5xl w-full mx-auto">
    <h1 class="text-4xl text-center sm:text-left text-white mt-5 mb-2">
      Recursos Educativos
    </h1>
    <p class="text-center sm:text-left text-white my-5 mx-10 md:mx-0 text-base">
      En esta sección encontrarás una variedad de recursos educativos para
      ayudarte a aprender y mejorar tus habilidades técnicas.
    </p>
    <section class="mx-2 md:mx-0">
      <form method="GET" action="/recursos" role="search" class="space-y-4">
        <div class="flex flex-col sm:flex-row">
          <SearchInput class="hidden md:block ml-1" />
          <input
            type="text"
            id="buscador"
            name="search"
            value={search}
            placeholder="Busca recursos por título..."
            autocomplete="off"
            class="w-full sm:w-96 px-4 py-2 text-white bg-transparent border border-gray-600 rounded-lg outline-none"
          />
          <button
            type="submit"
            class="mt-2 sm:mt-0 sm:ml-2 px-4 py-2 text-white rounded-lg transition-colors"
          >
            Buscar
          </button>
        </div>

        <section class="mt-7">
          <div class="flex flex-col">
            <h3 class="text-white text-lg font-medium mb-2">
              Filtrar por Categoría:
            </h3>
            <div class="flex justify-center items-center flex-wrap gap-2">
              <a
                href="/recursos"
                class={`px-3 py-1 rounded-full text-xs capitalize bg-gray-700 text-gray-300 hover:bg-gray-600`}
                >Todos</a
              >
              {
                names.map(({ name, nickName }) => (
                  <button
                    type="submit"
                    name="category"
                    value={name}
                    class={`px-2 py-1 rounded-full text-xs capitalize transition ${category === name ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}`}
                  >
                    {nickName}
                  </button>
                ))
              }
            </div>
          </div>
        </section>
      </form>
      <section
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-10 mx-10 md:mx-0"
      >
        {resourcesByPage.map((item) => <ArticleResources {...item} />)}
      </section>
      <PaginationResources
        totalPages={totalPages}
        search={search}
        category={category}
      />
      <Footer />
    </section>

    <style>
      div section button,
      div > a {
        padding: 5px 12px;
        border-radius: 0.5rem;
        background-color: #64748b7d;
        color: white;
        font-weight: 400;
        border: none;
        outline: none;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1rem;

        &:hover, /* pseudo-clase que significa que el ratón está encima */
    &:focus {
          /* pseudo-clase que significa que el elemento tiene el foco */
          background-color: var(--primary-hover);
          outline: 2px solid white;
        }

        &:active {
          transform: scale(0.9);
        }

        &:disabled {
          opacity: 0.5;
          pointer-events: none;
        }
      }

      form input ~ button {
        padding: 5px 12px;
        border-radius: 0.5rem;
        background-color: #64748b;
        color: white;
        font-weight: 400;
        border: none;
        outline: none;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1rem;

        &:hover, /* pseudo-clase que significa que el ratón está encima */
    &:focus {
          /* pseudo-clase que significa que el elemento tiene el foco */
          background-color: var(--primary-hover);
          outline: 2px solid white;
        }

        &:active {
          transform: scale(0.9);
        }

        &:disabled {
          opacity: 0.5;
          pointer-events: none;
        }
      }
      form {
        max-width: 100%;
        width: 100%;
        margin: 0 auto;
        padding-inline: 16px;
      }

      form > div {
        display: flex;
        align-items: center;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px 1px #64748b;
        padding: 2px 10px;
        gap: 0.5rem;
      }

      form input[type='text'] {
        flex: 1;
        background: transparent;
        border: none;
        outline: none;
        color: var(--text-primary);
        padding: 0.75rem 0.5rem;
        font-size: 1rem;
        font-family: inherit;
      }

      form input[type='text']::placeholder {
        color: #64748b;
      }

      @media and (width <style 400) {
        button {
          padding: 5px 8px;
          font-size: 0.5rem;
        }
      }

      ul li a {
        text-decoration: none;
        color: white;
        background-color: #64748b;
        padding: 5px 10px;
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
        border: 1px solid transparent;
        font-size: 14px;
      }

      ul li a:hover {
        background-color: var(--primary-hover);
        color: #fff;
        border: 1px solid white;
        transform: scale(1);
      }
    </style>
  </div>
</Layout>
